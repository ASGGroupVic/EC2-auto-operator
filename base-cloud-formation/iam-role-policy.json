{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "IAM managed policies for roles",
  "Parameters": {
    "administratorRoleName": {
      "Description": "Administrator Role Name",
      "Type": "String"
    },
    "developerRoleName": {
      "Description": "Developer Role Name",
      "Type": "String"
    }
  },
  "Resources": {
    "AllowAll": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "allow all actions",
        "Path": "/adminManaged/",
        "PolicyDocument": {
          "Version":"2012-10-17",
          "Statement": [
            {
              "Action": [
                "*"
              ],
              "Effect": "Allow",
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "administratorRoleName"
          }
        ]
      }
    },
    "RestrictedActions": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "Restricted actions for NormalUser",
        "Path": "/adminManaged/",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "PermitAllNonIAM",
              "Action": "*",
              "Effect": "Allow",
              "NotResource": "arn:aws:iam::*"
            },
            {
              "Sid": "PermitManageApplicationUsers",
              "Action": [
                "iam:CreateInstanceProfile",
                "iam:*Role*",
                "iam:*Instance*",
                "iam:GetUser",
                "iam:ListAccessKeys",
                "iam:ListUsers",
                "iam:*ServerCertificate*"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:iam::*:instance-profile/*",
                "arn:aws:iam::*:server-certificate/*",
                "arn:aws:iam::*:role/*"
              ]
            },
            {
              "Sid": "ShowOtherUsers",
              "Action": [
                "iam:ListUsers",
                "iam:GetUser",
                "iam:GetLoginProfile",
                "iam:ListGroupsForUser",
                "iam:ListAccessKeys",
                "iam:ListUserPolicies",
                "iam:GetUserPolicy",
                "iam:ListSigningCertificates"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:iam::*:user/*"
              ]
            },
            {
              "Sid": "AllowAssumeRolesInOtherAccounts",
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Resource": "arn:aws:iam::*:role/*"
            },
            {
              "Sid": "CannotAssumeRolesInThisAccount",
              "Action": "sts:AssumeRole",
              "Effect": "Deny",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:iam::",
                    {
                      "Ref": "AWS::AccountId"
                    },
                    ":",
                    "role/*"
                  ]
                ]
              }
            },
            {
              "Sid": "DenyChangeVPCParameters",
              "Action": [
                "ec2:AssociateDhcpOptions",
                "ec2:AssociateRouteTable",
                "ec2:Attach*Gateway",
                "ec2:Create*Gateway",
                "ec2:CreateNetworkAcl*",
                "ec2:CreateRoute*",
                "ec2:CreateSubnet",
                "ec2:CreateVpc*",
                "ec2:CreateVpn*",
                "ec2:Delete*Gateway",
                "ec2:DeleteDhcp*",
                "ec2:DeleteNetworkAcl*",
                "ec2:DeleteRoute*",
                "ec2:DeleteSubnet*",
                "ec2:DeleteVpc*",
                "ec2:DeleteVpn*",
                "ec2:Detach*Gateway",
                "ec2:DisassociateRouteTable",
                "ec2:Replace*"
              ],
              "Effect": "Deny",
              "Resource": [
                "*"
              ]
            },
            {
              "Sid": "HonorDeletionProtectionOnRDSDBInstances",
              "Action": "rds:DeleteDBInstance",
              "Effect": "Deny",
              "Resource": "arn:aws:rds:*:*:db:*",
              "Condition": {
                "streq": {
                  "rds:db-tag/deletion-protection": [
                    "true"
                  ]
                }
              }
            },
            {
              "Sid": "RestrictCloudTrail",
              "Effect": "Deny",
              "Action": "cloudtrail:*",
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "developerRoleName"
          }
        ]
      }
    }
  }
}

