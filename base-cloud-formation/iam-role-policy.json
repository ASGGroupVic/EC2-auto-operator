{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "IAM managed policies for roles",
  "Parameters": {
    "administratorRoleName": {
      "Description": "Administrator Role Name",
      "Type": "String"
    },
    "developerRoleName": {
      "Description": "Developer Role Name",
      "Type": "String"
    }
  },
  "Resources": {
    "AdminRolePolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "allow all actions",
        "Path": "/adminManaged/",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllowAll",
              "Effect": "Allow",
              "Action": "*",
              "Resource": "*"
            },
            {
              "Sid": "PreventMuckWithSAMLProviders",
              "Action": [
                "iam:DeleteAccountAlias",
                "iam:CreateSAMLProvider",
                "iam:DeleteSAMLProvider",
                "iam:UpdateSAMLProvider"
              ],
              "Effect": "Deny",
              "Resource": "*"
            },
            {
              "Sid": "PreventCreateIAMUsers",
              "Action": [
                "iam:AddUserToGroup",
                "iam:CreateAccessKey",
                "iam:CreateLoginProfile",
                "iam:CreateUser",
                "iam:DeleteAccountPasswordPolicy"
              ],
              "Effect": "Deny",
              "Resource": "*"
            },
            {
              "Sid": "PreventMuckWithCloudtrail",
              "Action": [
                "cloudtrail:CreateTrail",
                "cloudtrail:DeleteTrail",
                "cloudtrail:StartLogging",
                "cloudtrail:StopLogging",
                "cloudtrail:UpdateTrail"
              ],
              "Effect": "Deny",
              "Resource": "*"
            },
            {
              "Sid": "AllowAssumeRolesInOtherAccounts",
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Resource": "arn:aws:iam::*:role/*"
            },
            {
              "Sid": "CannotAssumeRolesInThisAccount",
              "Action": "sts:AssumeRole",
              "Effect": "Deny",
              "Resource":
              {
                "Fn::Join":[
                  "",
                  [
                    "arn:aws:iam::",
                    {
                      "Ref":"AWS::AccountId"
                    },
                    ":role/*"
                  ]
                ]
              }
            },
            {
              "Sid": "HonorDeletionProtectionOnRDSDBInstances",
              "Action": "rds:DeleteDBInstance",
              "Effect": "Deny",
              "Resource": "arn:aws:rds:*:*:db:*",
              "Condition": {
                "StringEquals": {
                  "rds:db-tag/deletion-protection": [
                    "true"
                  ]
                }
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "administratorRoleName"
          }
        ]
      }
    },
    "RestrictedActionsNormalUserPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "Restricted actions for NormalUser",
        "Path": "/adminManaged/",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "PermitAllNonIAM",
              "Action": "*",
              "Effect": "Allow",
              "NotResource": "arn:aws:iam::*"
            },
            {
              "Sid": "PermitManageApplicationUsers",
              "Action": [
                "iam:CreateInstanceProfile",
                "iam:*Policy*",
                "iam:*Role*",
                "iam:*Instance*",
                "iam:GetUser",
                "iam:ListAccessKeys",
                "iam:ListUsers",
                "iam:*ServerCertificate*"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:iam::*:instance-profile/*",
                "arn:aws:iam::*:server-certificate/*",
                "arn:aws:iam::*:role/*",
                "arn:aws:iam::*:policy/*"
              ]
            },
            {
              "Sid": "ShowOtherUsers",
              "Action": [
                "iam:ListUsers",
                "iam:GetUser",
                "iam:GetLoginProfile",
                "iam:ListGroupsForUser",
                "iam:ListAccessKeys",
                "iam:ListUserPolicies",
                "iam:GetUserPolicy",
                "iam:ListSigningCertificates"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:iam::*:user/*"
              ]
            },
            {
              "Sid": "AllowAssumeRolesInOtherAccounts",
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Resource": "arn:aws:iam::*:role/*"
            },
            {
              "Sid": "CannotAssumeRolesInThisAccount",
              "Action": "sts:AssumeRole",
              "Effect": "Deny",
              "Resource":
              {
                "Fn::Join":[
                  "",
                  [
                    "arn:aws:iam::",
                    {
                      "Ref":"AWS::AccountId"
                    },
                    ":role/*"
                  ]
                ]
              }
            },
            {
              "Sid": "DenyChangeVPCParameters",
              "Action": [
                "ec2:AssociateDhcpOptions",
                "ec2:AssociateRouteTable",
                "ec2:Attach*Gateway",
                "ec2:Create*Gateway",
                "ec2:CreateNetworkAcl*",
                "ec2:CreateRoute*",
                "ec2:CreateSubnet",
                "ec2:CreateVpc*",
                "ec2:CreateVpn*",
                "ec2:Delete*Gateway",
                "ec2:DeleteDhcp*",
                "ec2:DeleteNetworkAcl*",
                "ec2:DeleteRoute*",
                "ec2:DeleteSubnet*",
                "ec2:DeleteVpc*",
                "ec2:DeleteVpn*",
                "ec2:Detach*Gateway",
                "ec2:DisassociateRouteTable",
                "ec2:Replace*"
              ],
              "Effect": "Deny",
              "Resource": [
                "*"
              ]
            },
            {
              "Sid": "HonorDeletionProtectionOnRDSDBInstances",
              "Action": "rds:DeleteDBInstance",
              "Effect": "Deny",
              "Resource": "arn:aws:rds:*:*:db:*",
              "Condition": {
                "StringEquals": {
                  "rds:db-tag/deletion-protection": [
                    "true"
                  ]
                }
              }
            },
            {
              "Sid": "RestrictCloudTrail",
              "Effect": "Deny",
              "Action": "cloudtrail:*",
              "Resource": "*"
            },
            {
              "Sid": "AllowDetectEnvironmentViaAcctAliases",
              "Effect": "Allow",
              "Action": "iam:ListAccountAliases",
              "Resource": "arn:aws:iam::*:role/*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "developerRoleName"
          }
        ]
      }
    }
  }
}



