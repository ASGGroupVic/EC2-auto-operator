{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Assumable Role for the application residata-extractor to use",
  "Parameters": {
    "CDAssumeRole": {
      "Description": "Assume Role ARN provided by ConsumerData team",
      "Type": "String"
    },
     "AppObjctName": {
      "Description": "Application S3Bucket Object Name ",
      "Type": "String"
      },
    "ArchiveObjctName": {
      "Description": "S3Bucket Object Name for Data Archiving",
      "Type": "String"
    },
    "AppBucketName": {
      "Description": "Application S3Bucket Name ",
      "Type": "String"
    },
    "CRMObjctName": {
      "Description": "S3Bucket Object Name for Data Archiving",
      "Type": "String"
    }
  },
  "Resources": {
    "AssumeRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "policy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket",
                    "s3:GetObject",
                    "s3:GetBucketLocation"
                  ],
                  "Resource": [
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"AppBucketName"
                          }
                        ]
                      ]
                    },
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"AppBucketName"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject",
                    "s3:DeleteObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"AppObjctName"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject",
                    "s3:GetObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"ArchiveObjctName"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": "cloudwatch:PutMetricData",
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ec2:DescribeInstances",
                    "autoscaling:DescribeAutoScalingGroups",
                    "autoscaling:SetDesiredCapacity"
                  ],
                  "Resource": "*"
                },
                {
                  "Resource": [
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"CRMObjctName"
                          }
                        ]
                      ]
                    },
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"CRMObjctName"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ],
                  "Action": [
                    "s3:GetObject",
                    "s3:ListBucket",
                    "s3:GetBucketLocation"
                  ],
                  "Effect": "Allow"
                },
                {
                  "Effect": "Allow",
                  "Action": "sts:AssumeRole",
                  "Resource": { "Ref":"CDAssumeRole" }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "RoleARN": {
      "Value": {
        "Fn::GetAtt": [ "AssumeRole", "Arn" ]
      }
    }
  }
}
