{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Assumable Role for the application residata-extractor to use",
  "Parameters": {
    "CDAssumeRole": {
      "Description": "Assume Role ARN provided by ConsumerData team",
      "Type": "String"
    },
     "AppBucketName": {
      "Description": "Application Bucket Name ",
      "Type": "String"
      }
  },
  "Resources": {
    "AssumeRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:iam::",
                      {
                        "Ref": "AWS::AccountId"
                      },
                      ":",
                      "root"
                    ]
                  ]
                },
                "Service": "ec2.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "policy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:DeleteObject",
                    "s3:ListBucket"
                  ],
                  "Resource": [
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"AppObjctName"
                          }
                        ]
                      ]
                    },
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"AppObjctName"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"ArchiveObjctName"
                          }
                        ]
                      ]
                    },
                    {
                      "Fn::Join":[
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref":"ArchiveObjctName"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": "cloudwatch:PutMetricData",
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ec2:DescribeInstances",
                    "autoscaling:DescribeAutoScalingGroups",
                    "autoscaling:SetDesiredCapacity"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": "sts:AssumeRole",
                  "Resource": { "Ref":"CDAssumeRole" }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "RoleARN": {
      "Value": {
        "Fn::GetAtt": [ "AssumeRole", "Arn" ]
      }
    }
  }
}
