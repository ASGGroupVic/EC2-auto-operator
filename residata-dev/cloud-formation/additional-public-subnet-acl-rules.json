{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "allow richmond office to ssh into public subnet",
  "Parameters": {
    "PublicSubnetACLId": {
      "Description": "The Public subnet ACL ID",
      "Type": "String"
    }
  },

  "Resources": {
    "PublicSubnetIngressPermitEQXSSH": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "CidrBlock": "203.17.253.59/32",
        "Egress": false,
        "NetworkAclId": { "Ref": "PublicSubnetACLId" },
        "Protocol": 6,
        "PortRange": {
          "From": 22,
          "To": 22
        },
        "RuleAction": "allow",
        "RuleNumber": 180
      }
    },
    "PublicSubnetIngressPermitVPNSSH": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "CidrBlock": "203.13.23.30/32",
        "Egress": false,
        "NetworkAclId": { "Ref": "PublicSubnetACLId" },
        "Protocol": 6,
        "PortRange": {
          "From": 22,
          "To": 22
        },
        "RuleAction": "allow",
        "RuleNumber": 190
      }
    }
  }
}
